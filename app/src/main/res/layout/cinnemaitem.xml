<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/cinnema_image_map"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cinema_name_map"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/cinema_name_map"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/cinnema_addreass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cinnema_image_map"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cinnema_addreass"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toEndOf="@+id/cinnema_image_map"
            android:layout_toRightOf="@+id/cinnema_image_map"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cinnema_image_map"
            app:layout_constraintTop_toBottomOf="@id/cinema_name_map" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
